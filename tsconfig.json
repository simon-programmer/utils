{
    "compilerOptions": {
        "removeComments": true,
        "target": "ES6",

        "baseUrl": ".",
        "esModuleInterop": true,
        "moduleResolution": "node16",

        "strict": true,
        "allowUnreachableCode": false,

        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules/**/*"]
}
